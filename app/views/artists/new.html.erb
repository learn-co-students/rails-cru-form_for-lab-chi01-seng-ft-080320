<h1> Create a New Artist </h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |error|%>
        <h5 style="color: red"> <%= error %> </h5>
    <% end %>
<% end %>

<%= form_for @artist do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br>
<%= f.label :bio %>
<%= f.text_field :bio %><br>
<%= f.submit %>
<% end %>
<br>
<br>
<br>
<%= button_to "Return to Artist Index", artists_path, {method: :gets} %>