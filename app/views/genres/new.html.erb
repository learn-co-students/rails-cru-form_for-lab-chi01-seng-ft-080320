<h1> Create a New Genre </h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |error|%>
        <h5 style="color: red"> <%= error %> </h5>
    <% end %>
<% end %>

<%= form_for @genre do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br>
<%= f.submit %>
<% end %>
<br>
<br>
<br>
<%= button_to "Return to Genre Index", genres_path, {method: :gets} %>